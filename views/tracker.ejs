<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>Progress Tracker - MindCare</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container py-5">
    <h1 class="text-center mb-5">Your Progress</h1>

    <% if (sessions.length === 0) { %>
      <div class="text-center py-5">
        <i class="bi bi-calendar-x display-1 text-muted"></i>
        <h3 class="mt-3">No sessions yet</h3>
        <p class="text-muted">Start your first breathing exercise to track your progress</p>
        <a href="/exercises" class="btn btn-primary">Start Now</a>
      </div>
    <% } else { %>
      
      <div class="row mb-4">
        <div class="col-md-3 mb-3">
          <div class="stat-card p-3 text-center">
            <h3><%= sessions.length %></h3>
            <p class="text-muted mb-0">Total Sessions</p>
          </div>
        </div>
        <div class="col-md-3 mb-3">
          <div class="stat-card p-3 text-center">
            <h3><%= sessions.reduce((sum, s) => sum + s.duration, 0) %></h3>
            <p class="text-muted mb-0">Minutes Practiced</p>
          </div>
        </div>
        <div class="col-md-3 mb-3">
          <div class="stat-card p-3 text-center">
            <h3><%= Math.ceil((Date.now() - new Date(sessions[sessions.length - 1].createdAt)) / (1000 * 60 * 60 * 24)) %></h3>
            <p class="text-muted mb-0">Days Active</p>
          </div>
        </div>
        <div class="col-md-3 mb-3">
          <div class="stat-card p-3 text-center">
            <h3><%= [...new Set(sessions.map(s => new Date(s.createdAt).toDateString()))].length %></h3>
            <p class="text-muted mb-0">Unique Days</p>
          </div>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Session History</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Exercise</th>
                  <th>Duration</th>
                  <th>Mood</th>
                  <th>Notes</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% sessions.forEach(session => { %>
                <tr data-session-id="<%= session._id %>">
                  <td><%= new Date(session.createdAt).toLocaleDateString() %></td>
                  <td><%= session.exerciseType %></td>
                  <td><%= session.duration %> min</td>
                  <td><span class="badge bg-info"><%= session.mood %></span></td>
                  <td><%= session.notes || '-' %></td>
                  <td>
                    <button class="btn btn-sm btn-danger" onclick="deleteSession('<%= session._id %>')">
                      <i class="bi bi-trash"></i>
                    </button>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <%- include('partials/footer') %>
  <%- include('partials/scripts') %>
  <script src="/js/tracker.js"></script>
</body>
</html>